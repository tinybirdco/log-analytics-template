{
  "filters": [
    {
      "columnName": "level",
      "title": "Log Levels",
      "type": "multiselect",
      "order": 1
    },
    {
      "columnName": "environment",
      "title": "Environments",
      "type": "multiselect",
      "order": 2
    },
    {
      "columnName": "service",
      "title": "Services",
      "type": "multiselect",
      "order": 3
    },
    {
      "columnName": "request_method",
      "title": "HTTP Methods",
      "type": "multiselect",
      "order": 4
    },
    {
      "columnName": "status_code",
      "title": "Status Codes",
      "type": "multiselect",
      "order": 5
    },
    {
      "columnName": "request_path",
      "title": "Request Paths",
      "type": "multiselect",
      "order": 6
    },
    {
      "columnName": "user_agent",
      "title": "User Agents",
      "type": "multiselect",
      "order": 7
    },
    {
      "columnName": "message",
      "title": "by message",
      "type": "search",
      "order": 8
    }
  ],
  "table": {
    "columns": [
      {
        "key": "request_id",
        "title": "ID",
        "width": "w-32",
        "type": "text",
        "truncate": true
      },
      {
        "key": "timestamp",
        "title": "Time",
        "width": "w-32",
        "type": "datetime"
      },
      {
        "key": "level",
        "title": "Level",
        "width": "w-16",
        "type": "badge",
        "badgeConfig": {
          "colorMap": {
            "ERROR": "bg-red-100 text-red-700",
            "WARN": "bg-yellow-100 text-yellow-700"
          },
          "defaultColor": "bg-green-100 text-green-700"
        }
      },
      {
        "key": "service",
        "title": "Service",
        "width": "w-24",
        "type": "text"
      },
      {
        "key": "request_method",
        "title": "Method",
        "width": "w-16",
        "type": "text"
      },
      {
        "key": "request_path",
        "title": "Path",
        "width": "w-64",
        "type": "text"
      },
      {
        "key": "status_code",
        "title": "Status",
        "width": "w-16",
        "type": "badge",
        "badgeConfig": {
          "colorMap": {
            "500": "bg-red-100 text-red-700",
            "400": "bg-yellow-100 text-yellow-700"
          },
          "defaultColor": "bg-green-100 text-green-700"
        }
      },
      {
        "key": "message",
        "title": "Message",
        "width": "flex-1",
        "type": "text",
        "truncate": true
      }
    ]
  },
  "timeseries": {
    "endpoint": "/v0/pipes/log_timeseries.json",
    "index": "date",
    "categories": ["total_requests", "error_count"],
    "height": "140px",
    "colorPalette": ["#000000", "#ff0000"],
    "params": [
      {
        "name": "service",
        "type": "string[]"
      },
      {
        "name": "level",
        "type": "string[]"
      },
      {
        "name": "environment",
        "type": "string[]"
      },
      {
        "name": "request_method",
        "type": "string[]"
      },
      {
        "name": "status_code",
        "type": "string[]"
      },
      {
        "name": "request_path",
        "type": "string[]"
      },
      {
        "name": "user_agent",
        "type": "string[]"
      },
      {
        "name": "message",
        "type": "string"
      },
      {
        "name": "start_date",
        "type": "string"
      },
      {
        "name": "end_date",
        "type": "string"
      }
    ]
  },
  "endpoints": {
    "counter": "generic_counter",
    "logs": "log_analysis"
  }
} 